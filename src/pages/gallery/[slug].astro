---
import { getCollection, getEntry } from 'astro:content';
import BaseLayout from "@layouts/BaseLayout.astro";
import Header from "@components/Header";
import Footer from "@components/Footer";
import { Button } from "@components/ui/button";
import { Card, CardContent } from "@components/ui/card";
import { ArrowLeft, Heart, Share2, Eye } from "lucide-react";

export async function getStaticPaths() {
  const galleryItems = await getCollection('gallery');
  return galleryItems.map(item => ({
    params: { slug: item.id },
  }));
}

const { slug } = Astro.params;

if (!slug) {
  throw new Error('Gallery slug is required');
}

const galleryItem = await getEntry('gallery', slug);
const services = await getCollection('services');

// Get site settings
const siteSettingsCollection = await getCollection('siteSettings');
const siteSettings = siteSettingsCollection.length > 0 ? siteSettingsCollection[0].data : null;

if (!galleryItem) {
  return Astro.redirect('/404');
}

const service = galleryItem.data.serviceId 
  ? services.find(s => parseInt(s.id.split('/').pop() || '0') === galleryItem.data.serviceId)
  : null;

const allGallery = await getCollection('gallery');
const relatedItems = allGallery
  .filter(item => item.id !== slug && item.data.category === galleryItem.data.category)
  .slice(0, 3);
---

<BaseLayout 
  title={`${galleryItem.data.title} - Portfolio`}
  description={galleryItem.data.description}
>
  <div class="min-h-screen bg-gradient-to-br from-background via-background to-secondary/20">
    <!-- Navigation Header -->
    <div class="bg-background/90 backdrop-blur-md border-b border-border">
      <Header siteSettings={siteSettings} />
    </div>
    <!-- Main Content -->
    <div class="container mx-auto px-4 pb-20 pt-8">
      <div class="grid lg:grid-cols-2 gap-12 items-start">
        
        <!-- Navigation Actions -->
        <div class="lg:col-span-2 flex items-center justify-between mb-8">
          <Button 
            variant="ghost" 
            class="flex items-center gap-2 text-primary hover:text-primary/80"
            onclick="history.back()"
          >
            <ArrowLeft class="w-4 h-4" />
            Retour √† la galerie
          </Button>
          
          <div class="flex items-center gap-4">
            <Button variant="outline" size="sm" class="flex items-center gap-2" data-favorite>
              <Heart class="w-4 h-4" />
              Favoris
            </Button>
            <Button variant="outline" size="sm" class="flex items-center gap-2" data-share>
              <Share2 class="w-4 h-4" />
              Partager
            </Button>
          </div>
        </div>
        
        <!-- Image Gallery -->
        <div class="space-y-4">
          <!-- Main Image -->
          <div class="relative overflow-hidden rounded-2xl shadow-2xl">
            <div class="w-full aspect-[4/5] bg-gradient-to-br from-primary/20 to-accent/20 flex items-center justify-center">
              <div class="text-center">
                <div class="p-8 bg-gradient-luxury rounded-3xl text-white text-6xl mb-4 transform hover:scale-110 transition-transform duration-500">
                  üé®
                </div>
                <div class="text-foreground font-semibold text-lg">{galleryItem.data.title}</div>
                <div class="text-muted-foreground text-sm mt-2">{galleryItem.data.category}</div>
              </div>
            </div>
            <div class="absolute top-4 left-4">
              <span class="px-4 py-2 bg-primary/90 backdrop-blur-sm text-primary-foreground rounded-full text-sm font-medium shadow-lg">
                {galleryItem.data.category}
              </span>
            </div>
            {galleryItem.data.isFeatured && (
              <div class="absolute top-4 right-4">
                <span class="px-4 py-2 bg-gradient-luxury text-white rounded-full text-sm font-medium shadow-lg">
                  ‚≠ê Coup de c≈ìur
                </span>
              </div>
            )}
          </div>

          <!-- Additional Preview Cards -->
          <div class="grid grid-cols-2 gap-4">
            <div class="relative overflow-hidden rounded-lg shadow-lg">
              <div class="w-full aspect-[4/3] bg-gradient-to-br from-secondary/20 to-muted/40 flex items-center justify-center">
                <div class="text-center">
                  <div class="p-4 bg-gradient-luxury rounded-xl text-white text-2xl mb-2">
                    ‚ú®
                  </div>
                  <div class="text-xs text-muted-foreground">Avant/Apr√®s</div>
                </div>
              </div>
            </div>
            <div class="relative overflow-hidden rounded-lg shadow-lg">
              <div class="w-full aspect-[4/3] bg-gradient-to-br from-accent/20 to-primary/20 flex items-center justify-center">
                <div class="text-center">
                  <div class="p-4 bg-gradient-luxury rounded-xl text-white text-2xl mb-2">
                    üì∏
                  </div>
                  <div class="text-xs text-muted-foreground">D√©tails</div>
                </div>
              </div>
            </div>
          </div>
        </div>
        </div>

        <!-- Details -->
        <div class="space-y-8">
          <div>
            <h1 class="font-elegant text-4xl lg:text-5xl font-bold text-foreground mb-4">
              {galleryItem.data.title}
            </h1>
            
            <div class="flex items-center gap-6 text-sm text-muted-foreground mb-6">
              <div class="flex items-center gap-2">
                <Eye class="w-4 h-4" />
                <span>347 vues</span>
              </div>
              {service && (
                <div class="flex items-center gap-2">
                  <span class="w-2 h-2 bg-primary rounded-full"></span>
                  <span>{service.data.title}</span>
                </div>
              )}
            </div>
            
            <p class="text-lg text-muted-foreground leading-relaxed">
              {galleryItem.data.description}
            </p>
          </div>

          {/* Service Details */}
          {service && (
            <Card class="p-6 bg-gradient-card border-border/50">
              <h3 class="font-semibold text-lg mb-3 text-foreground">
                Service associ√©
              </h3>
              <div class="flex items-start gap-4">
                <img
                  src={`/src/assets/${service.data.imagePath}`}
                  alt={service.data.title}
                  class="w-16 h-16 object-cover rounded-lg"
                />
                <div class="flex-1">
                  <h4 class="font-medium text-foreground">{service.data.title}</h4>
                  <p class="text-sm text-muted-foreground mb-2">{service.data.description}</p>
                  <span class="text-primary font-semibold">{service.data.price}</span>
                </div>
              </div>
              <Button class="w-full mt-4 bg-gradient-luxury">
                R√©server ce service
              </Button>
            </Card>
          )}

          {/* Call to Action */}
          <div class="space-y-4">
            <Button size="lg" class="w-full bg-gradient-luxury text-white">
              Demander un devis personnalis√©
            </Button>
            <Button variant="outline" size="lg" class="w-full">
              Voir tous les services
            </Button>
          </div>
        </div>
      </div>

      <!-- Related Gallery Items -->
      {relatedItems.length > 0 && (
        <div class="mt-20">
          <h3 class="font-elegant text-3xl font-bold text-center mb-12">
            Dans la m√™me cat√©gorie
          </h3>
          <div class="grid md:grid-cols-3 gap-8">
            {relatedItems.map((item) => (
              <Card class="group overflow-hidden bg-gradient-card border-border/50 hover-glow">
                <CardContent class="p-0">
                  <a href={`/gallery/${item.id}`}>
                    <div class="relative overflow-hidden">
                      <img
                        src={`/src/assets/${item.data.featuredImage}`}
                        alt={item.data.title}
                        class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-700"
                      />
                      <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                        <div class="absolute bottom-0 left-0 right-0 p-4 text-white">
                          <h4 class="font-elegant text-lg font-semibold">
                            {item.data.title}
                          </h4>
                          <p class="text-sm text-white/90">
                            {item.data.category}
                          </p>
                        </div>
                      </div>
                    </div>
                  </a>
                </CardContent>
              </Card>
            ))}
          </div>
        </div>
      )}
    </div>
    
    <Footer siteSettings={siteSettings} />
  </div>
</BaseLayout>

<script>
  // Add some interactivity
  document.addEventListener('DOMContentLoaded', function() {
    // Handle favorite button
    const favoriteBtn = document.querySelector('[data-favorite]');
    if (favoriteBtn) {
      favoriteBtn.addEventListener('click', function() {
        this.classList.toggle('text-red-500');
        // Here you could add logic to save to localStorage or send to API
      });
    }

    // Handle share button
    const shareBtn = document.querySelector('[data-share]');
    if (shareBtn) {
      shareBtn.addEventListener('click', async function() {
        if (navigator.share) {
          try {
            await navigator.share({
              title: document.title,
              url: window.location.href
            });
          } catch (err) {
            console.log('Error sharing:', err);
          }
        } else {
          // Fallback: copy to clipboard
          navigator.clipboard.writeText(window.location.href);
          // You could show a toast notification here
        }
      });
    }
  });
</script>
</BaseLayout>